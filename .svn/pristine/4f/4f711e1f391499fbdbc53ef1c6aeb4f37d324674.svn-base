}

.funionBtn{
  width: 248px;
  height: 52px;
  border: 2px solid #fff;
  padding-top: 1%;
  color: #fff;
  border-radius: 6px;
  display: block;
}

.funban-1{
  background: #999;
}

.slideout{
  background: #999;
}