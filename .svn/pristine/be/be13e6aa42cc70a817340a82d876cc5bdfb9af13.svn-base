router.beforeEach((to, from, next) => {
	if(to.name == 'error') {
		
	}	else if(to.name == 'login') {
		if(sessionStorage.hasOwnProperty('personal')){
			router.push({ name: 'main' });
		}
	}	else {
		if(!sessionStorage.hasOwnProperty('personal')){
			router.push({ name: 'login' });
		} 
	}
	next();
	//console.log(to.name, sessionStorage.getItem('personal'));
})


