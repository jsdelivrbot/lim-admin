        Vue.prototype.lineChar = function(barData) {
            var lineC= $(".lineChar")
            var lineChar = new Chart(lineC, {
                type: 'line',
                data: {
                    labels: barData.month,
                    datasets: [{
                        label: '游客访问量',
                        data: barData.count,
                        borderColor: ['rgba(54, 162, 235, 1)'],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero:true
                            }
                        }]
                    }
                }
