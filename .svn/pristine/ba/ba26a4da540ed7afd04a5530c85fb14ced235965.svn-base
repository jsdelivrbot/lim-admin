              var radarC= $(".radarChar")
              var radarChar = new Chart(radarC, {
                  type: 'radar',
                  data: {
                      labels: ['Running', 'Swimming', 'Eating', 'Cycling'],
                      datasets: [
                      {
                          label: '111',
