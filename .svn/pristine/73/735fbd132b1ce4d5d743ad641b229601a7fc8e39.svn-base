/*自定义*/
html, body {
  font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
  height: 100%;
  background: #fff;
}
*,.row{
  padding:0px;
  margin:0px;
}

.header{
  top:0;
  left:0;
  height: 50px;
  width: 100%;
  max-width: 100%;
  background: #1A1A1A;
  position: fixed;
  clear: both;
  z-index:99;
}

.header img{
  clear: both;
  max-width: 100%;
  padding: 1% 5%;
}



.product1{width: 7%;}
.product{width: 10%;}
.product1,.product{
    height: 40px;
    color: #fff;
    float: left;
    line-height: 3;
    margin: 4px 3% 0 3%;
    text-align: center;
    display: inline-block; 
}
.headerRight a:hover{
	color: #00A6EC;
	text-decoration: none;
}
.headerRight{
	position: relative;
	overflow:hidden;
}

.prod{
	width: 12%;
    float: left;
    margin: 7px 2%;
    
}

.other{
	width: 5%;
    height: 40px;
    color: #fff; 
    float: left;
    margin-left: 1%;
    text-align: center;
    display: inline-block;  
}

.banner{
	width: 100%;
	height: 583px;
	max-height: 100%;
	margin-top:40px;
}
.loginBtn{
	width: 248px;
	height: 52px;
	border: 2px solid #fff;
	padding-top: 1%;
	color: #fff;
	border-radius: 6px;
	display: block;
	margin-top: 14%;
}
.swiper-slide a:hover{
	color: #A4C3EA;
	text-decoration: none;
}

.swiper-container {
        width: 100%;
        height: 100%;
        
    }
    .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        
        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
    }


.produceProducion{
	height: 100%;
	width: 100%;
	background: #fff;
	text-align:center;
}

.produceBan-1,.produceBan-7{
	float: left;
	background: #fff;
	width: 100%;
	margin:2% 0;
	text-align:center;
}
.produceBan-1 img,.produceBan-7 img{
	width: 30%;
}

.produceBan-2{
	margin-top:2%;
	float: left;
	background: #F2F2F2;
	width: 100%;
}
.produceBan-2 img,.produceBan-3 img,.produceBan-4 img,.produceBan-5 img,.produceBan-6 img{
	width: 57%;
	margin: 15%;
}

.produceBan-2 h2,.produceBan-3 h2,.produceBan-4 h2,.produceBan-6 h2{
	padding: 6% 0 2% 5%;
}

.ban-2{
	margin-left: 5%;
}
.lead{
	padding: 3% 5%;
}

.produceBan-3{	
	float: left;
	background: #fff;
	width: 100%;
}

.produceBan-4,.produceBan-6{	
	float: left;
	background: #F2F2F2;
	width: 100%;
}

.produceBan-5 h2{
	padding: 15% 0 0 5%;
}


.copyright{
	height: 200px;
	width: 100%;
	max-width: 100%;
	background: #1A1A1A;
	float: left;
}

.serve{
	padding: 2% 0 3% 5%;
	color: #999;
}
.serve hr{
	width: 45%;
	border-top: 1px solid #1296DB;
}

.twoDpic{
	width: 120px;
	height: 120px;
	margin: 7% 0 0 50%; 
}
.twoDcode p{
	color: #999;
	font-size: 16px;
	margin: 10px 0 0 43%;
}