</template>
<script>
import { mapGetters } from 'vuex'
export default {
  data() {
    return {
      orderdetailStatus:'待受理'      
    }
  },
  methods: {
    handleClick: function(status){
      let query = null;
      this.orderdetailStatus = status.label;
      if(status.value >= 0) {
        query = {'orderdetailStatus': status.value};
      }
      this.$router.push({name:'orderManage', query: query});
    }
  }
}
</script>